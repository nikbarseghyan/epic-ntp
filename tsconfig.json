{
   "exclude": ["**/*.(spec|test).ts", "node_modules"],
   "compilerOptions": {
      "types": [
         "jest",
      ],
      "lib": [
         "es5",
         "es6",
         "ES2020"
      ],
      "typeRoots": [
         "./custom_typings",
         "./node_modules/@types"
      ],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
   },
   "include": [
      "**/*.spec.ts",
      "**/*.test.ts"
   ],
}